                        <a name="room" class="btn btn-primary" href="/chat/rock">Rock</a>
                        <a name="room" class="btn btn-dark" href="/chat/scissors">Scissors</a>
                    </div>
                </div>
                <div class="card card-bordered text-center padding2">
                    <div class="d-grid gap-2 mx-auto">
                        <a name="logout" class="btn btn-primary" href="/" id="logout">Logout</a>
                    </div>
                </div>
                <div class="card card-bordered">
                    <div class="card-header">
                        <h4 class="card-title"><strong>Users</strong></h4> 
                    </div>
                    <div class="ps-container ps-theme-default ps-active-y" id="user-list" style="overflow-y: scroll !important; height:220px !important;">
                        <div class="ps-scrollbar-x-rail" style="left: 0px; bottom: 0px;">
                            <div class="ps-scrollbar-x" tabindex="0" style="left: 0px; width: 0px;"></div>
                        </div>
                        <div class="ps-scrollbar-y-rail" style="top: 0px; height: 0px; right: 2px;">
                            <div class="ps-scrollbar-y" tabindex="0" style="top: 0px; height: 2px;"></div>
                        </div>
                        <div id="usernames"></div>
